<!DOCTYPE html>
<html>
  <head>
    <title>SummernoteSandbox</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="container mt-4">
      <% unless notice.nil? %>
        <p class="alert alert-info" id="notice"><%= notice %></p>
      <% end %>
      
      <%= yield %>
    </div>
  </body>
</html>
